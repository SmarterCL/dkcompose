# ---------------------------------------------------------
# SmarterOS Infrastructure Environment Variables (.env.example)
# Duplicate as .env and fill with real values (never commit real secrets).
# Vault Path Convention: secret/data/smarteros/<component>/<key>
# Example retrieval: vault kv get -format=json secret/smarteros/chatwoot | jq -r '.data.data.SECRET_KEY_BASE'
# ---------------------------------------------------------

# --- Postgres Core ---
POSTGRES_USER=smarter
POSTGRES_PASSWORD=change_me_pg
POSTGRES_DB=smarter

# --- Odoo ERP ---
ODOO_DB_HOST=smarter-postgres
ODOO_DB_USER=smarter
ODOO_DB_PASSWORD=change_me_odoo

# --- n8n Workflows ---
N8N_DB_HOST=smarter-postgres
N8N_DB_NAME=smarter
N8N_DB_USER=smarter
N8N_DB_PASSWORD=change_me_n8n
N8N_TIMEZONE=America/Santiago
N8N_WEBHOOK_URL=https://n8n.smarterbot.cl/

# --- Botpress ---
BOTPRESS_LICENSE_KEY=replace_botpress_license
BOTPRESS_AUTH_SECRET=replace_botpress_auth

# --- Chatwoot CRM ---
CHATWOOT_SECRET_KEY_BASE=replace_chatwoot_secret_key_base
CHATWOOT_REDIS_URL=redis://smarter-redis:6379
CHATWOOT_DATABASE_URL=postgres://chatwoot:chatwoot@smarter-postgres:5432/chatwoot

# --- Metabase KPI ---
METABASE_DB_NAME=smarter
METABASE_DB_PORT=5432
METABASE_DB_USER=smarter
METABASE_DB_PASSWORD=change_me_metabase
METABASE_DB_HOST=smarter-postgres

# --- MCP Registry ---
MCP_REGISTRY_TITLE=SmarterOS MCP Registry

# --- Supabase (API) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=replace_supabase_service_role_key

# --- Resend (Email) ---
RESEND_API_KEY=replace_resend_key
RESEND_FROM=no-reply@smarterbot.cl
ADMIN_EMAIL=admin@smarterbot.cl

# --- Vault (optional dev overrides) ---
VAULT_ADDR=http://smarter-vault:8200
VAULT_ROOT_TOKEN=replace_vault_root_for_dev

# --- API (additional optional vars) ---
CHATWOOT_BASE_URL=https://crm.smarterbot.cl
CHATWOOT_TOKEN=replace_chatwoot_personal_token
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1

# --- Misc / Defaults ---
API_ENV=production
BASE_DOMAIN=smarterbot.cl
